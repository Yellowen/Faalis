.nav-tabs-custom
  ul.nav.nav-tabs
    - @reflection_controller.each do |mdl|
      li = link_to(t(mdl), controller: mdl, "#{controller_name.singularize}_id" => @resource.id)

.row
  .col-sm-12.col-lg-12
    .box.box-primary
      .box-header
        .box-title
          / TODO: add a DSL to provide a message for this section
      .box-body
        ul.resource.details.col-sm-12.col-lg-6.col-md-6
          - @_fields.each_with_index do |name, index|
            li
              h5.header
                = t("#{@resource.class.name.underscore}.show.#{name.to_s.underscore}") + ':'
              h4.result
                = @resource.send(name.to_sym).to_s || "-"


      .box-footer.hidden-print
          .row
            .col-sm-2.pull-right
              a.btn.btn-warning.btn-block href=(get_url(@index_route, nil, @engine))
                i class=("fa fa-chevron-#{Faalis::I18n.direction(I18n.locale) == 'ltr' ? 'left' : 'right'}")
                = t('faalis.back')
